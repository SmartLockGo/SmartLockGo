<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eum.ssrgo.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/activity_maps"
            android:layout_width="match_parent"
            android:layout_above="@+id/layout_ridingData"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/layout_ridingData"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:visibility="gone"
            android:background="#969f9f9f">


            <Button
                android:id="@+id/btn_stop"
                android:layout_width="180dip"
                android:layout_height="100dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="일시정지/정지"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="180dip"
                android:layout_height="100dip"
                android:text="종료"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/distance"
                android:text="거리"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_height="20dip"
                android:layout_width="180dip" />

            <TextView
            android:id="@+id/speed"
                android:text="속도"
                android:layout_height="20dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="180dip" />

            <TextView
                android:id="@+id/txt_speed"
                android:layout_below="@+id/speed"
                android:layout_alignParentStart="true"
                android:layout_height="80dip"
                android:layout_width="180dip" />

            <TextView
                android:id="@+id/txt_distance"
                android:layout_height="80dip"
                android:layout_below="@+id/distance"
                android:layout_alignParentEnd="true"
                android:layout_width="180dip" />

        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_summaryData"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="#969f9f9f">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="주행시간 : "
                    android:layout_height="50dip"
                    android:layout_width="80dip" />
                <TextView
                    android:id="@+id/sum_ridingtime"
                    android:layout_height="50dip"
                    android:layout_width="110dip" />
                <TextView
                    android:text="평균속도 : "
                    android:layout_height="50dip"
                    android:layout_width="80dip" />
                <TextView
                    android:id="@+id/sum_avrspeed"
                    android:layout_height="50dip"
                    android:layout_width="110dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="시작시간 : "
                    android:layout_height="50dip"
                    android:layout_width="80dip" />
                <TextView
                    android:id="@+id/sum_starttime"
                    android:layout_height="50dip"
                    android:layout_width="110dip" />

                <TextView
                    android:text="최고속도 : "
                    android:layout_height="50dip"
                    android:layout_width="80dip" />
                <TextView
                    android:id="@+id/sum_highspeed"
                    android:layout_height="50dip"
                    android:layout_width="110dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="종료시간 : "
                    android:layout_height="50dip"
                    android:layout_width="80dip" />
                <TextView
                    android:id="@+id/sum_endtime"
                    android:layout_height="50dip"
                    android:layout_width="110dip" />

                <TextView
                    android:text="칼 로 리 : "
                    android:layout_height="50dip"
                    android:layout_width="80dip" />
                <TextView
                    android:id="@+id/sum_calorie"
                    android:layout_height="50dip"
                    android:layout_width="110dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="거    리 : "
                    android:layout_height="50dip"
                    android:layout_width="80dip" />
                <TextView
                    android:id="@+id/sum_distance"
                    android:layout_height="50dip"
                    android:layout_width="110dip" />
            </LinearLayout>





        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
